<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_nav_graph"
    app:startDestination="@id/breakingNewsFragment">

    <fragment
        android:id="@+id/breakingNewsFragment"
        android:name="com.example.projectmomin.ui.fragments.BreakingNewsFragment"
        android:label="fragment_breaking_news" >
        <action
            android:id="@+id/action_breakingNewsFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/savedNewsFragment"
        android:name="com.example.projectmomin.ui.fragments.SavedNewsFragment"
        android:label="fragment_saved_news"
         />
    <fragment
        android:id="@+id/searchNewsFragment"
        android:name="com.example.projectmomin.ui.fragments.SearchNewsFragment"
        android:label="fragment_search_news"
        />
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.example.projectmomin.ui.fragments.WebViewFragment"
        android:label="fragment_web_view"
        tools:layout="@layout/fragment_web_view" />
</navigation>